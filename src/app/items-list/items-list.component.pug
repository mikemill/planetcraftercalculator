table.table.table-striped
  thead
    tr
      th Name
      th Type
      th Power
      th Resources
      th Dependencies
  tbody
    tr(*ngFor="let item of items")
      td
        div {{ item.name }}
        .text-muted {{ item.key }}
      td {{ item.type }}
      td {{ item.power }}
      td
        div(*ngIf="item.heat") #[strong Heat] {{ item.heat }} pK/s
        div(*ngIf="item.pressure") #[strong Pressure] {{ item.pressure }} nPa/s
        div(*ngIf="item.biomass") #[strong Biomass] {{ item.biomass }}
        div(*ngIf="item.oxygen") #[strong Oxygen] {{ item.oxygen }} ppq/s
      td
        ul(*ngIf="item.dependencies.length")
          li(*ngFor="let depend of item.dependencies") {{ depend.quantity }}x {{ itemNames[depend.item] }}
